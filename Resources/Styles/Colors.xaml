<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Dark Theme Color Palette -->
    
    <!-- Primary Brand Colors -->
    <Color x:Key="Primary">#6366F1</Color>
    <Color x:Key="PrimaryDark">#4F46E5</Color>
    <Color x:Key="AccentColor">#8B5CF6</Color>
    
    <!-- Background Colors -->
    <Color x:Key="PageBackgroundColor">#0F0F23</Color>
    <Color x:Key="CardBackgroundColor">#1A1A2E</Color>
    <Color x:Key="SurfaceColor">#16213E</Color>
    
    <!-- Text Colors -->
    <Color x:Key="PrimaryTextColor">#F1F5F9</Color>
    <Color x:Key="SecondaryTextColor">#94A3B8</Color>
    <Color x:Key="PlaceholderColor">#64748B</Color>
    
    <!-- Status Colors -->
    <Color x:Key="ToDoColor">#475569</Color>
    <Color x:Key="InProgressColor">#F59E0B</Color>
    <Color x:Key="CompletedColor">#10B981</Color>
    <Color x:Key="OverdueColor">#EF4444</Color>
    
    <!-- UI Element Colors -->
    <Color x:Key="BorderColor">#334155</Color>
    <Color x:Key="SecondaryButtonColor">#374151</Color>
    <Color x:Key="DangerColor">#DC2626</Color>
    
    <!-- Legacy Colors (for compatibility with Styles.xaml) -->
    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Secondary">#DFD8F7</Color>
    <Color x:Key="SecondaryDarkText">#9880e5</Color>
    <Color x:Key="Tertiary">#2B0B98</Color>
    <Color x:Key="PrimaryDarkText">#242424</Color>
    <Color x:Key="Magenta">#D600AA</Color>
    <Color x:Key="MidnightBlue">#190649</Color>
    <Color x:Key="OffBlack">#1f1f1f</Color>
    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>

    <!-- Shadows -->
    <Shadow x:Key="CardShadow"
            Brush="#40000000"
            Offset="0,4"
            Radius="8"
            Opacity="0.4"/>
    
    <Shadow x:Key="ButtonShadow"
            Brush="#608B5CF6"
            Offset="0,4"
            Radius="12"
            Opacity="0.6"/>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="PageBackgroundBrush" Color="{StaticResource PageBackgroundColor}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackgroundColor}"/>
    
</ResourceDictionary>