<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- ═══════════════════════════════════════════════════════ -->
    <!-- MINIMALIST BLACK & WHITE THEME                           -->
    <!-- ═══════════════════════════════════════════════════════ -->
    
    <!-- Primary Colors - Pure Black & White -->
    <Color x:Key="Primary">#FFFFFF</Color>
    <Color x:Key="PrimaryDark">#E0E0E0</Color>
    <Color x:Key="PrimaryLight">#FFFFFF</Color>
    <Color x:Key="AccentColor">#FFFFFF</Color>
    <Color x:Key="AccentLight">#F5F5F5</Color>
    
    <!-- Background Colors - Dark Mode -->
    <Color x:Key="PageBackgroundColor">#000000</Color>
    <Color x:Key="CardBackgroundColor">#111111</Color>
    <Color x:Key="CardBackgroundColorTranslucent">#DD111111</Color>
    <Color x:Key="SurfaceColor">#0A0A0A</Color>
    <Color x:Key="GlassColor">#20FFFFFF</Color>
    
    <!-- Text Colors -->
    <Color x:Key="PrimaryTextColor">#FFFFFF</Color>
    <Color x:Key="SecondaryTextColor">#888888</Color>
    <Color x:Key="PlaceholderColor">#666666</Color>
    
    <!-- Status Colors - Grayscale -->
    <Color x:Key="ToDoColor">#444444</Color>
    <Color x:Key="InProgressColor">#888888</Color>
    <Color x:Key="CompletedColor">#CCCCCC</Color>
    <Color x:Key="OverdueColor">#FF6666</Color>
    
    <!-- UI Element Colors -->
    <Color x:Key="BorderColor">#333333</Color>
    <Color x:Key="BorderGlowColor">#444444</Color>
    <Color x:Key="SecondaryButtonColor">#222222</Color>
    <Color x:Key="DangerColor">#666666</Color>
    
    <!-- Legacy Colors (for compatibility with Styles.xaml) -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="Secondary">#DDDDDD</Color>
    <Color x:Key="SecondaryDarkText">#AAAAAA</Color>
    <Color x:Key="Tertiary">#333333</Color>
    <Color x:Key="PrimaryDarkText">#111111</Color>
    <Color x:Key="Magenta">#FFFFFF</Color>
    <Color x:Key="MidnightBlue">#000000</Color>
    <Color x:Key="OffBlack">#000000</Color>
    <Color x:Key="Gray100">#F0F0F0</Color>
    <Color x:Key="Gray200">#E0E0E0</Color>
    <Color x:Key="Gray300">#C0C0C0</Color>
    <Color x:Key="Gray400">#A0A0A0</Color>
    <Color x:Key="Gray500">#808080</Color>
    <Color x:Key="Gray600">#606060</Color>
    <Color x:Key="Gray900">#202020</Color>
    <Color x:Key="Gray950">#101010</Color>

    <!-- ═══════════════════════════════════════════════════════ -->
    <!-- MONOCHROME GRADIENTS (subtle)                            -->
    <!-- ═══════════════════════════════════════════════════════ -->
    
    <LinearGradientBrush x:Key="AccentGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FFFFFF" Offset="0.0"/>
        <GradientStop Color="#E0E0E0" Offset="1.0"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#FFFFFF" Offset="0.0"/>
        <GradientStop Color="#CCCCCC" Offset="1.0"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="CardGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#111111" Offset="0.0"/>
        <GradientStop Color="#1A1A1A" Offset="1.0"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="ButtonGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#FFFFFF" Offset="0.0"/>
        <GradientStop Color="#E0E0E0" Offset="1.0"/>
    </LinearGradientBrush>
    
    <!-- Status Gradients - Grayscale -->
    <LinearGradientBrush x:Key="ToDoGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#333333" Offset="0.0"/>
        <GradientStop Color="#444444" Offset="1.0"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="InProgressGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#666666" Offset="0.0"/>
        <GradientStop Color="#888888" Offset="1.0"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="CompletedGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#AAAAAA" Offset="0.0"/>
        <GradientStop Color="#CCCCCC" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- ═══════════════════════════════════════════════════════ -->
    <!-- SHADOWS                                                  -->
    <!-- ═══════════════════════════════════════════════════════ -->
    
    <Shadow x:Key="CardShadow"
            Brush="#40000000"
            Offset="0,4"
            Radius="8"
            Opacity="0.3"/>
    
    <Shadow x:Key="CardGlowShadow"
            Brush="#20FFFFFF"
            Offset="0,2"
            Radius="12"
            Opacity="0.2"/>
    
    <Shadow x:Key="ButtonShadow"
            Brush="#40FFFFFF"
            Offset="0,4"
            Radius="12"
            Opacity="0.3"/>
    
    <Shadow x:Key="AccentGlow"
            Brush="#30FFFFFF"
            Offset="0,0"
            Radius="16"
            Opacity="0.4"/>

    <!-- Solid Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="PageBackgroundBrush" Color="{StaticResource PageBackgroundColor}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackgroundColor}"/>
    <SolidColorBrush x:Key="GlassBrush" Color="{StaticResource GlassColor}"/>
    
</ResourceDictionary>