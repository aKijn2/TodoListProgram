<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:TaskFlow.ViewModels"
             x:Class="TaskFlow.Views.SidebarView"
             x:DataType="viewmodels:TaskListViewModel">

    <Grid RowDefinitions="Auto,Auto,*,Auto"
          Padding="16,24"
          BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, 
                                            Dark={StaticResource CardBackgroundColor}}">

        <!-- 1. Brand / Logo -->
        <HorizontalStackLayout Grid.Row="0" Spacing="12" Margin="0,0,0,32">
            <Border HeightRequest="32" WidthRequest="32" 
                    StrokeShape="RoundRectangle 8"
                    BackgroundColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource PrimaryTextColor}}"
                    StrokeThickness="0"
                    VerticalOptions="Center">
                <Label Text="T" 
                       TextColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource PageBackgroundColor}}"
                       FontAttributes="Bold"
                       FontSize="20"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Border>
            <Label Text="TaskFlow" 
                   FontSize="20" 
                   FontAttributes="Bold" 
                   VerticalOptions="Center"
                   TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource PrimaryTextColor}}"/>
        </HorizontalStackLayout>

        <!-- 2. New Task Button -->
        <Button Grid.Row="1"
                Text="+ New Task"
                Command="{Binding AddTaskCommand}"
                BackgroundColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource PrimaryTextColor}}"
                TextColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource PageBackgroundColor}}"
                CornerRadius="8"
                HeightRequest="44"
                FontAttributes="Bold"
                Margin="0,0,0,32"/>

        <!-- 3. Navigation Links -->
        <VerticalStackLayout Grid.Row="2" Spacing="8">
            <!-- All Tasks -->
            <Border Stroke="Transparent"
                    StrokeShape="RoundRectangle 8"
                    Padding="12,10"
                    BackgroundColor="Transparent">
                <Border.Triggers>
                    <DataTrigger Binding="{Binding SelectedFilterIndex}" TargetType="Border" Value="0">
                        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource GlassColor}}"/>
                    </DataTrigger>
                </Border.Triggers>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding LoadTasksCommand}" CommandParameter="0"/>
                </Border.GestureRecognizers>
                
                <Grid ColumnDefinitions="24,*" ColumnSpacing="12">
                    <Label Text="◆" 
                           FontSize="16" 
                           VerticalOptions="Center"
                           TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource SecondaryTextColor}}">
                        <Label.Triggers>
                             <DataTrigger Binding="{Binding SelectedFilterIndex}" TargetType="Label" Value="0">
                                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource PrimaryTextColor}}"/>
                            </DataTrigger>
                        </Label.Triggers>
                    </Label>
                    <Label Grid.Column="1" 
                           Text="All Tasks" 
                           FontSize="14" 
                           VerticalOptions="Center"
                           TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource SecondaryTextColor}}">
                        <Label.Triggers>
                             <DataTrigger Binding="{Binding SelectedFilterIndex}" TargetType="Label" Value="0">
                                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource PrimaryTextColor}}"/>
                                <Setter Property="FontAttributes" Value="Bold"/>
                            </DataTrigger>
                        </Label.Triggers>
                    </Label>
                </Grid>
            </Border>

            <!-- To Do -->
            <Border Stroke="Transparent"
                    StrokeShape="RoundRectangle 8"
                    Padding="12,10"
                    BackgroundColor="Transparent">
                <Border.Triggers>
                    <DataTrigger Binding="{Binding SelectedFilterIndex}" TargetType="Border" Value="1">
                         <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource GlassColor}}"/>
                    </DataTrigger>
                </Border.Triggers>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding LoadTasksCommand}" CommandParameter="1"/>
                </Border.GestureRecognizers>

                <Grid ColumnDefinitions="24,*" ColumnSpacing="12">
                    <Label Text="○" 
                           FontSize="16" 
                           VerticalOptions="Center"
                           TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource SecondaryTextColor}}">
                        <Label.Triggers>
                             <DataTrigger Binding="{Binding SelectedFilterIndex}" TargetType="Label" Value="1">
                                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource PrimaryTextColor}}"/>
                            </DataTrigger>
                        </Label.Triggers>
                    </Label>
                    <Label Grid.Column="1" 
                           Text="To Do" 
                           FontSize="14" 
                           VerticalOptions="Center"
                           TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource SecondaryTextColor}}">
                        <Label.Triggers>
                             <DataTrigger Binding="{Binding SelectedFilterIndex}" TargetType="Label" Value="1">
                                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource PrimaryTextColor}}"/>
                                <Setter Property="FontAttributes" Value="Bold"/>
                            </DataTrigger>
                        </Label.Triggers>
                    </Label>
                </Grid>
            </Border>

            <!-- Active -->
            <Border Stroke="Transparent"
                    StrokeShape="RoundRectangle 8"
                    Padding="12,10"
                    BackgroundColor="Transparent">
                <Border.Triggers>
                    <DataTrigger Binding="{Binding SelectedFilterIndex}" TargetType="Border" Value="2">
                         <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource GlassColor}}"/>
                    </DataTrigger>
                </Border.Triggers>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding LoadTasksCommand}" CommandParameter="2"/>
                </Border.GestureRecognizers>

                <Grid ColumnDefinitions="24,*" ColumnSpacing="12">
                    <Label Text="◐" 
                           FontSize="16" 
                           VerticalOptions="Center"
                           TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource SecondaryTextColor}}">
                        <Label.Triggers>
                             <DataTrigger Binding="{Binding SelectedFilterIndex}" TargetType="Label" Value="2">
                                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource PrimaryTextColor}}"/>
                            </DataTrigger>
                        </Label.Triggers>
                    </Label>
                    <Label Grid.Column="1" 
                           Text="In Progress" 
                           FontSize="14" 
                           VerticalOptions="Center"
                           TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource SecondaryTextColor}}">
                        <Label.Triggers>
                             <DataTrigger Binding="{Binding SelectedFilterIndex}" TargetType="Label" Value="2">
                                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource PrimaryTextColor}}"/>
                                <Setter Property="FontAttributes" Value="Bold"/>
                            </DataTrigger>
                        </Label.Triggers>
                    </Label>
                </Grid>
            </Border>

            <!-- Done -->
            <Border Stroke="Transparent"
                    StrokeShape="RoundRectangle 8"
                    Padding="12,10"
                    BackgroundColor="Transparent">
                <Border.Triggers>
                    <DataTrigger Binding="{Binding SelectedFilterIndex}" TargetType="Border" Value="3">
                         <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource GlassColor}}"/>
                    </DataTrigger>
                </Border.Triggers>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding LoadTasksCommand}" CommandParameter="3"/>
                </Border.GestureRecognizers>

                <Grid ColumnDefinitions="24,*" ColumnSpacing="12">
                     <Label Text="●" 
                           FontSize="16" 
                           VerticalOptions="Center"
                           TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource SecondaryTextColor}}">
                        <Label.Triggers>
                             <DataTrigger Binding="{Binding SelectedFilterIndex}" TargetType="Label" Value="3">
                                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource PrimaryTextColor}}"/>
                            </DataTrigger>
                        </Label.Triggers>
                    </Label>
                    <Label Grid.Column="1" 
                           Text="Completed" 
                           FontSize="14" 
                           VerticalOptions="Center"
                           TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource SecondaryTextColor}}">
                        <Label.Triggers>
                             <DataTrigger Binding="{Binding SelectedFilterIndex}" TargetType="Label" Value="3">
                                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource PrimaryTextColor}}"/>
                                <Setter Property="FontAttributes" Value="Bold"/>
                            </DataTrigger>
                        </Label.Triggers>
                    </Label>
                </Grid>
            </Border>
        </VerticalStackLayout>

        <!-- 4. Bottom Actions (Theme, Settings, Profile) -->
        <VerticalStackLayout Grid.Row="3" Spacing="8">
            <BoxView HeightRequest="1" Color="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource BorderColor}}" Margin="0,0,0,16"/>
            
            <!-- Theme Toggle -->
             <Grid ColumnDefinitions="Auto,*" Padding="12,10">
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ToggleThemeCommand}"/>
                </Grid.GestureRecognizers>
                <Path Aspect="Uniform"
                      Data="{AppThemeBinding Light={StaticResource IconSun}, Dark={StaticResource IconMoon}}"
                      Fill="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource SecondaryTextColor}}"
                      HeightRequest="18" WidthRequest="18"
                      VerticalOptions="Center"/>
                <Label Grid.Column="1" Text="Toggle Theme" Margin="12,0,0,0"
                       FontSize="13" VerticalOptions="Center"
                       TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource SecondaryTextColor}}"/>
            </Grid>

            <!-- Settings -->
            <Grid ColumnDefinitions="Auto,*" Padding="12,10">
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnGameTapped"/>
                </Grid.GestureRecognizers>
                <Path Aspect="Uniform"
                      Data="{StaticResource IconSettings}"
                      Fill="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource SecondaryTextColor}}"
                      HeightRequest="18" WidthRequest="18"
                      VerticalOptions="Center"/>
                <Label Grid.Column="1" Text="Games" Margin="12,0,0,0"
                       FontSize="13" VerticalOptions="Center"
                       TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource SecondaryTextColor}}"/>
            </Grid>

            <!-- Profile / Settings -->
             <Grid ColumnDefinitions="Auto,*" Padding="12,10">
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ToggleSettingsCommand}"/>
                </Grid.GestureRecognizers>
                <Label Text="●" FontSize="18" VerticalOptions="Center"
                       TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource SecondaryTextColor}}"/>
                <Label Grid.Column="1" Text="Settings" Margin="12,0,0,0"
                       FontSize="13" VerticalOptions="Center"
                       TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource SecondaryTextColor}}"/>
            </Grid>
        </VerticalStackLayout>

    </Grid>
</ContentView>
