<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Todo_asa.ViewModels"
             xmlns:models="clr-namespace:Todo_asa.Models"
             x:Class="Todo_asa.Pages.TaskDetailPage"
             x:DataType="viewmodels:TaskDetailViewModel"
             Title="{Binding Title}"
             BackgroundColor="{StaticResource PageBackgroundColor}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <!-- Task Title -->
            <VerticalStackLayout Spacing="8">
                <Label Text="Title" 
                       FontSize="14" 
                       FontAttributes="Bold"
                       TextColor="{StaticResource SecondaryTextColor}"/>
                <Border BackgroundColor="{StaticResource CardBackgroundColor}"
                        StrokeShape="RoundRectangle 12"
                        Stroke="{StaticResource BorderColor}"
                        StrokeThickness="1"
                        Padding="12">
                    <Entry Text="{Binding TaskTitle}"
                           Placeholder="Enter task title..."
                           PlaceholderColor="{StaticResource PlaceholderColor}"
                           TextColor="{StaticResource PrimaryTextColor}"
                           FontSize="16"
                           BackgroundColor="Transparent"/>
                </Border>
            </VerticalStackLayout>
            
            <!-- Description -->
            <VerticalStackLayout Spacing="8">
                <Label Text="Description" 
                       FontSize="14" 
                       FontAttributes="Bold"
                       TextColor="{StaticResource SecondaryTextColor}"/>
                <Border BackgroundColor="{StaticResource CardBackgroundColor}"
                        StrokeShape="RoundRectangle 12"
                        Stroke="{StaticResource BorderColor}"
                        StrokeThickness="1"
                        Padding="12"
                        MinimumHeightRequest="120">
                    <Editor Text="{Binding Description}"
                            Placeholder="Enter description..."
                            PlaceholderColor="{StaticResource PlaceholderColor}"
                            TextColor="{StaticResource PrimaryTextColor}"
                            FontSize="15"
                            AutoSize="TextChanges"
                            BackgroundColor="Transparent"/>
                </Border>
            </VerticalStackLayout>
            
            <!-- Status Picker -->
            <VerticalStackLayout Spacing="8">
                <Label Text="Status" 
                       FontSize="14" 
                       FontAttributes="Bold"
                       TextColor="{StaticResource SecondaryTextColor}"/>
                <Border BackgroundColor="{StaticResource CardBackgroundColor}"
                        StrokeShape="RoundRectangle 12"
                        Stroke="{StaticResource BorderColor}"
                        StrokeThickness="1"
                        Padding="12">
                    <Picker SelectedIndex="{Binding SelectedStatusIndex}"
                            TextColor="{StaticResource PrimaryTextColor}"
                            BackgroundColor="Transparent">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>üìù To Do</x:String>
                                <x:String>üîÑ In Progress</x:String>
                                <x:String>‚úÖ Completed</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                </Border>
            </VerticalStackLayout>
            
            <!-- Due Date -->
            <VerticalStackLayout Spacing="8">
                <Label Text="Due Date" 
                       FontSize="14" 
                       FontAttributes="Bold"
                       TextColor="{StaticResource SecondaryTextColor}"/>
                
                <!-- Toggle Due Date -->
                <HorizontalStackLayout Spacing="12">
                    <CheckBox IsChecked="{Binding HasDueDate}"
                              Color="{StaticResource AccentColor}"/>
                    <Label Text="Set a due date"
                           FontSize="15"
                           TextColor="{StaticResource PrimaryTextColor}"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
                
                <!-- Date Picker (visible when HasDueDate is true) -->
                <Border BackgroundColor="{StaticResource CardBackgroundColor}"
                        StrokeShape="RoundRectangle 12"
                        Stroke="{StaticResource BorderColor}"
                        StrokeThickness="1"
                        Padding="12"
                        IsVisible="{Binding HasDueDate}">
                    <DatePicker Date="{Binding SelectedDueDate}"
                                MinimumDate="{Binding MinimumDate}"
                                TextColor="{StaticResource PrimaryTextColor}"
                                BackgroundColor="Transparent"/>
                </Border>
            </VerticalStackLayout>
            
            <!-- Subtasks Section -->
            <VerticalStackLayout Spacing="12">
                <Label Text="Subtasks" 
                       FontSize="14" 
                       FontAttributes="Bold"
                       TextColor="{StaticResource SecondaryTextColor}"/>
                
                <!-- Add Subtask -->
                <Border BackgroundColor="{StaticResource CardBackgroundColor}"
                        StrokeShape="RoundRectangle 12"
                        Stroke="{StaticResource BorderColor}"
                        StrokeThickness="1"
                        Padding="12">
                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                        <Entry Grid.Column="0"
                               Text="{Binding NewSubTaskTitle}"
                               Placeholder="Add a subtask..."
                               PlaceholderColor="{StaticResource PlaceholderColor}"
                               TextColor="{StaticResource PrimaryTextColor}"
                               BackgroundColor="Transparent"
                               ReturnCommand="{Binding AddSubTaskCommand}"/>
                        <Button Grid.Column="1"
                                Text="Add"
                                BackgroundColor="{StaticResource AccentColor}"
                                TextColor="White"
                                CornerRadius="8"
                                Padding="16,8"
                                Command="{Binding AddSubTaskCommand}"/>
                    </Grid>
                </Border>
                
                <!-- Subtask List -->
                <VerticalStackLayout BindableLayout.ItemsSource="{Binding SubTasks}" Spacing="8">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate x:DataType="models:SubTaskItem">
                            <Border BackgroundColor="{StaticResource CardBackgroundColor}"
                                    StrokeShape="RoundRectangle 10"
                                    Stroke="Transparent"
                                    Padding="12">
                                <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                                    
                                    <!-- Checkbox -->
                                    <CheckBox Grid.Column="0"
                                              IsChecked="{Binding IsCompleted}"
                                              Color="{StaticResource AccentColor}">
                                        <CheckBox.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:TaskDetailViewModel}}, Path=ToggleSubTaskCommand}"
                                                                  CommandParameter="{Binding .}"/>
                                        </CheckBox.GestureRecognizers>
                                    </CheckBox>
                                    
                                    <!-- Title -->
                                    <Label Grid.Column="1"
                                           Text="{Binding Title}"
                                           FontSize="15"
                                           TextColor="{StaticResource PrimaryTextColor}"
                                           VerticalOptions="Center">
                                        <Label.Triggers>
                                            <DataTrigger TargetType="Label" Binding="{Binding IsCompleted}" Value="True">
                                                <Setter Property="TextDecorations" Value="Strikethrough"/>
                                                <Setter Property="TextColor" Value="{StaticResource SecondaryTextColor}"/>
                                            </DataTrigger>
                                        </Label.Triggers>
                                    </Label>
                                    
                                    <!-- Delete Button -->
                                    <Button Grid.Column="2"
                                            Text="‚úï"
                                            FontSize="14"
                                            BackgroundColor="Transparent"
                                            TextColor="{StaticResource SecondaryTextColor}"
                                            WidthRequest="32"
                                            HeightRequest="32"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:TaskDetailViewModel}}, Path=DeleteSubTaskCommand}"
                                            CommandParameter="{Binding .}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </VerticalStackLayout>
            </VerticalStackLayout>
            
            <!-- Action Buttons -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="12" Margin="0,20,0,0">
                <Button Grid.Column="0"
                        Text="Cancel"
                        BackgroundColor="{StaticResource SecondaryButtonColor}"
                        TextColor="{StaticResource PrimaryTextColor}"
                        CornerRadius="12"
                        HeightRequest="50"
                        Command="{Binding CancelCommand}"/>
                <Button Grid.Column="1"
                        Text="Save"
                        BackgroundColor="{StaticResource AccentColor}"
                        TextColor="White"
                        CornerRadius="12"
                        HeightRequest="50"
                        Command="{Binding SaveCommand}"/>
            </Grid>
            
            <!-- Delete Button (only for existing tasks) -->
            <Button Text="üóëÔ∏è Delete Task"
                    BackgroundColor="{StaticResource DangerColor}"
                    TextColor="White"
                    CornerRadius="12"
                    HeightRequest="50"
                    Command="{Binding DeleteCommand}"
                    IsVisible="{Binding IsNewTask, Converter={StaticResource InverseBoolConverter}}"/>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
