<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:TaskFlow.ViewModels"
             xmlns:models="clr-namespace:TaskFlow.Models"
             x:Class="TaskFlow.Pages.TaskDetailPage"
             x:DataType="viewmodels:TaskDetailViewModel"
             Title="{Binding Title}"
             BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource PageBackgroundColor}}">

    <Grid RowDefinitions="Auto, *" RowSpacing="0">
        <!-- HEADER / TOOLBAR -->
        <Grid Grid.Row="0" 
              ColumnDefinitions="Auto,*,Auto" 
              Padding="20,16"
              BackgroundColor="Transparent"
              MaximumWidthRequest="800"
              HorizontalOptions="Center"
              WidthRequest="{Binding Width, Source={RelativeSource AncestorType={x:Type ContentPage}}}">
            
            <!-- Cancel Button -->
            <Border Grid.Column="0"
                    StrokeShape="RoundRectangle 20"
                    BackgroundColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource PrimaryTextColor}}"
                    Stroke="Transparent"
                    StrokeThickness="1"
                    Padding="20,8"
                    HorizontalOptions="Start">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding CancelCommand}"/>
                </Border.GestureRecognizers>
                <Label Text="Cancel"
                       TextColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource PageBackgroundColor}}"
                       FontFamily="Inter"
                       FontAttributes="Bold"
                       FontSize="14"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"/>
            </Border>

            <!-- Save Button -->
            <Border Grid.Column="2" 
                    StrokeShape="RoundRectangle 20"
                    BackgroundColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource PrimaryTextColor}}"
                    Stroke="Transparent"
                    Padding="20,8"
                    HorizontalOptions="End">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding SaveCommand}"/>
                </Border.GestureRecognizers>
                <Label Text="Save"
                       TextColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource PageBackgroundColor}}"
                       FontFamily="Inter"
                       FontAttributes="Bold"
                       FontSize="14"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"/>
            </Border>
        </Grid>

        <!-- SCROLLING FORM CONTENT -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" 
                                 Spacing="20"
                                 MaximumWidthRequest="800"
                                 HorizontalOptions="Center"
                                 WidthRequest="{Binding Width, Source={RelativeSource AncestorType={x:Type ContentPage}}}">
                
                <!-- TASK TITLE -->
            <VerticalStackLayout Spacing="8">
                <Label Text="TITLE" 
                       FontSize="11" 
                       FontAttributes="Bold"
                       FontFamily="Inter"
                       TextColor="{StaticResource SecondaryTextColor}"
                       CharacterSpacing="1"/>
                <Border BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackgroundColor}}"
                        StrokeShape="RoundRectangle 12"
                        Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource BorderColor}}"
                        StrokeThickness="1"
                        Padding="14,12">
                    <Entry Text="{Binding TaskTitle}"
                           Placeholder="Enter task title..."
                           PlaceholderColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource PlaceholderColor}}"
                           TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource PrimaryTextColor}}"
                           FontSize="16"
                           FontFamily="Inter"
                           BackgroundColor="Transparent"/>
                </Border>
            </VerticalStackLayout>
            
            <!-- DESCRIPTION -->
            <VerticalStackLayout Spacing="8">
                <Label Text="DESCRIPTION" 
                       FontSize="11" 
                       FontAttributes="Bold"
                       FontFamily="Inter"
                       TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource SecondaryTextColor}}"
                       CharacterSpacing="1"/>
                <Border BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackgroundColor}}"
                        StrokeShape="RoundRectangle 12"
                        Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource BorderColor}}"
                        StrokeThickness="1"
                        Padding="14,12"
                        MinimumHeightRequest="100">
                    <Editor Text="{Binding Description}"
                            Placeholder="Enter description..."
                            PlaceholderColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource PlaceholderColor}}"
                            TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource PrimaryTextColor}}"
                            FontSize="14"
                            FontFamily="Inter"
                            AutoSize="TextChanges"
                            BackgroundColor="Transparent"/>
                </Border>
            </VerticalStackLayout>
            
            <!-- STATUS -->
            <VerticalStackLayout Spacing="8">
                <Label Text="STATUS" 
                       FontSize="11" 
                       FontAttributes="Bold"
                       FontFamily="Inter"
                       TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource SecondaryTextColor}}"
                       CharacterSpacing="1"/>
                <Border BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackgroundColor}}"
                        StrokeShape="RoundRectangle 12"
                        Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource BorderColor}}"
                        StrokeThickness="1"
                        Padding="14,8">
                    <Grid ColumnDefinitions="Auto,*">
                        <!-- Status Icon -->
                        <Label Grid.Column="0" 
                               FontSize="16"
                               Margin="0,0,12,0"
                               VerticalOptions="Center">
                            <Label.Triggers>
                                <DataTrigger TargetType="Label" Binding="{Binding SelectedStatusIndex}" Value="0">
                                    <Setter Property="Text" Value="○"/>
                                    <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource SecondaryTextColor}}"/>
                                </DataTrigger>
                                <DataTrigger TargetType="Label" Binding="{Binding SelectedStatusIndex}" Value="1">
                                    <Setter Property="Text" Value="◐"/>
                                    <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource PrimaryTextColor}}"/>
                                </DataTrigger>
                                <DataTrigger TargetType="Label" Binding="{Binding SelectedStatusIndex}" Value="2">
                                    <Setter Property="Text" Value="●"/>
                                    <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource PrimaryTextColor}}"/>
                                </DataTrigger>
                            </Label.Triggers>
                        </Label>
                        <Picker Grid.Column="1"
                                SelectedIndex="{Binding SelectedStatusIndex}"
                                TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource PrimaryTextColor}}"
                                BackgroundColor="Transparent">
                            <Picker.ItemsSource>
                                <x:Array Type="{x:Type x:String}">
                                    <x:String>To Do</x:String>
                                    <x:String>In Progress</x:String>
                                    <x:String>Completed</x:String>
                                </x:Array>
                            </Picker.ItemsSource>
                        </Picker>
                    </Grid>
                </Border>
            </VerticalStackLayout>
            
            <!-- DUE DATE -->
            <VerticalStackLayout Spacing="8">
                <Label Text="DUE DATE" 
                       FontSize="11" 
                       FontAttributes="Bold"
                       FontFamily="Inter"
                       TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource SecondaryTextColor}}"
                       CharacterSpacing="1"/>
                
                <Border BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackgroundColor}}"
                        StrokeShape="RoundRectangle 12"
                        Stroke="Transparent"
                        Padding="12,8">
                    <HorizontalStackLayout Spacing="12">
                        <CheckBox IsChecked="{Binding HasDueDate}"
                                  Color="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource PrimaryTextColor}}"/>
                        <Label Text="Set a due date"
                               FontSize="14"
                               FontFamily="Inter"
                               TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource PrimaryTextColor}}"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                </Border>
                
                <Border BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackgroundColor}}"
                        StrokeShape="RoundRectangle 12"
                        Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource BorderColor}}"
                        StrokeThickness="1"
                        Padding="14,12"
                        IsVisible="{Binding HasDueDate}">
                    <DatePicker Date="{Binding SelectedDueDate}"
                                MinimumDate="{Binding MinimumDate}"
                                TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource PrimaryTextColor}}"
                                BackgroundColor="Transparent"/>
                </Border>
            </VerticalStackLayout>
            
            <!-- SUBTASKS -->
            <VerticalStackLayout Spacing="10">
                <Label Text="SUBTASKS" 
                       FontSize="11" 
                       FontAttributes="Bold"
                       FontFamily="Inter"
                       TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource SecondaryTextColor}}"
                       CharacterSpacing="1"/>
                
                <!-- Add Subtask -->
                <Border BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackgroundColor}}"
                        StrokeShape="RoundRectangle 12"
                        Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource BorderColor}}"
                        StrokeThickness="1"
                        Padding="12">
                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                        <Entry Grid.Column="0"
                               Text="{Binding NewSubTaskTitle}"
                               Placeholder="Add a subtask..."
                               PlaceholderColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource PlaceholderColor}}"
                               TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource PrimaryTextColor}}"
                               FontFamily="Inter"
                               BackgroundColor="Transparent"
                               ReturnCommand="{Binding AddSubTaskCommand}"/>
                        <Border Grid.Column="1"
                                StrokeShape="RoundRectangle 8"
                                Stroke="Transparent"
                                BackgroundColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource PrimaryTextColor}}"
                                Padding="14,8">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding AddSubTaskCommand}"/>
                            </Border.GestureRecognizers>
                            <Label Text="Add" 
                                   TextColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource PageBackgroundColor}}" 
                                   FontAttributes="Bold"
                                   FontFamily="Inter"
                                   FontSize="12"
                                   VerticalOptions="Center"/>
                        </Border>
                    </Grid>
                </Border>
                
                <!-- Subtask List -->
                <VerticalStackLayout BindableLayout.ItemsSource="{Binding SubTasks}" Spacing="6">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate x:DataType="models:SubTaskItem">
                            <Border BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackgroundColor}}"
                                    StrokeShape="RoundRectangle 10"
                                    Stroke="Transparent"
                                    Padding="12">
                                <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:TaskDetailViewModel}}, Path=ToggleSubTaskCommand}"
                                                              CommandParameter="{Binding .}"/>
                                    </Grid.GestureRecognizers>

                                    <CheckBox Grid.Column="0"
                                              IsChecked="{Binding IsCompleted}"
                                              Color="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource PrimaryTextColor}}"
                                              InputTransparent="True">
                                    </CheckBox>
                                    
                                    <Label Grid.Column="1"
                                           Text="{Binding Title}"
                                           FontSize="14"
                                           FontFamily="Inter"
                                           TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource PrimaryTextColor}}"
                                           VerticalOptions="Center">
                                        <Label.Triggers>
                                            <DataTrigger TargetType="Label" Binding="{Binding IsCompleted}" Value="True">
                                                <Setter Property="TextDecorations" Value="Strikethrough"/>
                                                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource SecondaryTextColor}}"/>
                                            </DataTrigger>
                                        </Label.Triggers>
                                    </Label>
                                    
                                    <Border Grid.Column="2"
                                            WidthRequest="24" HeightRequest="24"
                                            StrokeShape="RoundRectangle 6"
                                            BackgroundColor="Transparent">
                                        <Border.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:TaskDetailViewModel}}, Path=DeleteSubTaskCommand}"
                                                                  CommandParameter="{Binding .}"/>
                                        </Border.GestureRecognizers>
                                        <Label Text="×" 
                                               FontSize="14"
                                               TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource SecondaryTextColor}}"
                                               VerticalOptions="Center"
                                               HorizontalOptions="Center"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </VerticalStackLayout>
            </VerticalStackLayout>
            
            <!-- ACTION BUTTONS REMOVED (Moved to Header) -->
            
            <!-- Delete Button -->
            <Border StrokeShape="RoundRectangle 12"
                    BackgroundColor="Transparent"
                    Stroke="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource SecondaryTextColor}}"
                    StrokeThickness="1"
                    HeightRequest="48"
                    IsVisible="{Binding IsNewTask, Converter={StaticResource InverseBoolConverter}}">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding DeleteCommand}"/>
                </Border.GestureRecognizers>
                <Label Text="Delete Task"
                       TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource SecondaryTextColor}}"
                       FontFamily="Inter"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"/>
            </Border>
            
        </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
