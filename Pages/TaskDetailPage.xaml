<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Todo_asa.ViewModels"
             xmlns:models="clr-namespace:Todo_asa.Models"
             x:Class="Todo_asa.Pages.TaskDetailPage"
             x:DataType="viewmodels:TaskDetailViewModel"
             Title="{Binding Title}"
             BackgroundColor="{StaticResource PageBackgroundColor}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <!-- TASK TITLE -->
            <VerticalStackLayout Spacing="8">
                <Label Text="TITLE" 
                       FontSize="11" 
                       FontAttributes="Bold"
                       FontFamily="Inter"
                       TextColor="{StaticResource SecondaryTextColor}"
                       CharacterSpacing="1"/>
                <Border BackgroundColor="{StaticResource CardBackgroundColor}"
                        StrokeShape="RoundRectangle 12"
                        Stroke="{StaticResource BorderColor}"
                        StrokeThickness="1"
                        Padding="14,12">
                    <Entry Text="{Binding TaskTitle}"
                           Placeholder="Enter task title..."
                           PlaceholderColor="{StaticResource PlaceholderColor}"
                           TextColor="{StaticResource PrimaryTextColor}"
                           FontSize="16"
                           FontFamily="Inter"
                           BackgroundColor="Transparent"/>
                </Border>
            </VerticalStackLayout>
            
            <!-- DESCRIPTION -->
            <VerticalStackLayout Spacing="8">
                <Label Text="DESCRIPTION" 
                       FontSize="11" 
                       FontAttributes="Bold"
                       FontFamily="Inter"
                       TextColor="{StaticResource SecondaryTextColor}"
                       CharacterSpacing="1"/>
                <Border BackgroundColor="{StaticResource CardBackgroundColor}"
                        StrokeShape="RoundRectangle 12"
                        Stroke="{StaticResource BorderColor}"
                        StrokeThickness="1"
                        Padding="14,12"
                        MinimumHeightRequest="100">
                    <Editor Text="{Binding Description}"
                            Placeholder="Enter description..."
                            PlaceholderColor="{StaticResource PlaceholderColor}"
                            TextColor="{StaticResource PrimaryTextColor}"
                            FontSize="14"
                            FontFamily="Inter"
                            AutoSize="TextChanges"
                            BackgroundColor="Transparent"/>
                </Border>
            </VerticalStackLayout>
            
            <!-- STATUS -->
            <VerticalStackLayout Spacing="8">
                <Label Text="STATUS" 
                       FontSize="11" 
                       FontAttributes="Bold"
                       FontFamily="Inter"
                       TextColor="{StaticResource SecondaryTextColor}"
                       CharacterSpacing="1"/>
                <Border BackgroundColor="{StaticResource CardBackgroundColor}"
                        StrokeShape="RoundRectangle 12"
                        Stroke="{StaticResource BorderColor}"
                        StrokeThickness="1"
                        Padding="14,8">
                    <Grid ColumnDefinitions="Auto,*">
                        <!-- Status Icon -->
                        <Label Grid.Column="0" 
                               FontSize="16"
                               Margin="0,0,12,0"
                               VerticalOptions="Center">
                            <Label.Triggers>
                                <DataTrigger TargetType="Label" Binding="{Binding SelectedStatusIndex}" Value="0">
                                    <Setter Property="Text" Value="○"/>
                                    <Setter Property="TextColor" Value="{StaticResource SecondaryTextColor}"/>
                                </DataTrigger>
                                <DataTrigger TargetType="Label" Binding="{Binding SelectedStatusIndex}" Value="1">
                                    <Setter Property="Text" Value="◐"/>
                                    <Setter Property="TextColor" Value="{StaticResource PrimaryTextColor}"/>
                                </DataTrigger>
                                <DataTrigger TargetType="Label" Binding="{Binding SelectedStatusIndex}" Value="2">
                                    <Setter Property="Text" Value="●"/>
                                    <Setter Property="TextColor" Value="{StaticResource PrimaryTextColor}"/>
                                </DataTrigger>
                            </Label.Triggers>
                        </Label>
                        <Picker Grid.Column="1"
                                SelectedIndex="{Binding SelectedStatusIndex}"
                                TextColor="{StaticResource PrimaryTextColor}"
                                BackgroundColor="Transparent">
                            <Picker.ItemsSource>
                                <x:Array Type="{x:Type x:String}">
                                    <x:String>To Do</x:String>
                                    <x:String>In Progress</x:String>
                                    <x:String>Completed</x:String>
                                </x:Array>
                            </Picker.ItemsSource>
                        </Picker>
                    </Grid>
                </Border>
            </VerticalStackLayout>
            
            <!-- DUE DATE -->
            <VerticalStackLayout Spacing="8">
                <Label Text="DUE DATE" 
                       FontSize="11" 
                       FontAttributes="Bold"
                       FontFamily="Inter"
                       TextColor="{StaticResource SecondaryTextColor}"
                       CharacterSpacing="1"/>
                
                <Border BackgroundColor="{StaticResource CardBackgroundColor}"
                        StrokeShape="RoundRectangle 12"
                        Stroke="Transparent"
                        Padding="12,8">
                    <HorizontalStackLayout Spacing="12">
                        <CheckBox IsChecked="{Binding HasDueDate}"
                                  Color="{StaticResource PrimaryTextColor}"/>
                        <Label Text="Set a due date"
                               FontSize="14"
                               FontFamily="Inter"
                               TextColor="{StaticResource PrimaryTextColor}"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                </Border>
                
                <Border BackgroundColor="{StaticResource CardBackgroundColor}"
                        StrokeShape="RoundRectangle 12"
                        Stroke="{StaticResource BorderColor}"
                        StrokeThickness="1"
                        Padding="14,12"
                        IsVisible="{Binding HasDueDate}">
                    <DatePicker Date="{Binding SelectedDueDate}"
                                MinimumDate="{Binding MinimumDate}"
                                TextColor="{StaticResource PrimaryTextColor}"
                                BackgroundColor="Transparent"/>
                </Border>
            </VerticalStackLayout>
            
            <!-- SUBTASKS -->
            <VerticalStackLayout Spacing="10">
                <Label Text="SUBTASKS" 
                       FontSize="11" 
                       FontAttributes="Bold"
                       FontFamily="Inter"
                       TextColor="{StaticResource SecondaryTextColor}"
                       CharacterSpacing="1"/>
                
                <!-- Add Subtask -->
                <Border BackgroundColor="{StaticResource CardBackgroundColor}"
                        StrokeShape="RoundRectangle 12"
                        Stroke="{StaticResource BorderColor}"
                        StrokeThickness="1"
                        Padding="12">
                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                        <Entry Grid.Column="0"
                               Text="{Binding NewSubTaskTitle}"
                               Placeholder="Add a subtask..."
                               PlaceholderColor="{StaticResource PlaceholderColor}"
                               TextColor="{StaticResource PrimaryTextColor}"
                               FontFamily="Inter"
                               BackgroundColor="Transparent"
                               ReturnCommand="{Binding AddSubTaskCommand}"/>
                        <Border Grid.Column="1"
                                StrokeShape="RoundRectangle 8"
                                Stroke="Transparent"
                                BackgroundColor="{StaticResource PrimaryTextColor}"
                                Padding="14,8">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding AddSubTaskCommand}"/>
                            </Border.GestureRecognizers>
                            <Label Text="Add" 
                                   TextColor="{StaticResource PageBackgroundColor}" 
                                   FontAttributes="Bold"
                                   FontFamily="Inter"
                                   FontSize="12"
                                   VerticalOptions="Center"/>
                        </Border>
                    </Grid>
                </Border>
                
                <!-- Subtask List -->
                <VerticalStackLayout BindableLayout.ItemsSource="{Binding SubTasks}" Spacing="6">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate x:DataType="models:SubTaskItem">
                            <Border BackgroundColor="{StaticResource CardBackgroundColor}"
                                    StrokeShape="RoundRectangle 10"
                                    Stroke="Transparent"
                                    Padding="12">
                                <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:TaskDetailViewModel}}, Path=ToggleSubTaskCommand}"
                                                              CommandParameter="{Binding .}"/>
                                    </Grid.GestureRecognizers>

                                    <CheckBox Grid.Column="0"
                                              IsChecked="{Binding IsCompleted}"
                                              Color="{StaticResource PrimaryTextColor}"
                                              InputTransparent="True">
                                    </CheckBox>
                                    
                                    <Label Grid.Column="1"
                                           Text="{Binding Title}"
                                           FontSize="14"
                                           FontFamily="Inter"
                                           TextColor="{StaticResource PrimaryTextColor}"
                                           VerticalOptions="Center">
                                        <Label.Triggers>
                                            <DataTrigger TargetType="Label" Binding="{Binding IsCompleted}" Value="True">
                                                <Setter Property="TextDecorations" Value="Strikethrough"/>
                                                <Setter Property="TextColor" Value="{StaticResource SecondaryTextColor}"/>
                                            </DataTrigger>
                                        </Label.Triggers>
                                    </Label>
                                    
                                    <Border Grid.Column="2"
                                            WidthRequest="24" HeightRequest="24"
                                            StrokeShape="RoundRectangle 6"
                                            BackgroundColor="Transparent">
                                        <Border.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:TaskDetailViewModel}}, Path=DeleteSubTaskCommand}"
                                                                  CommandParameter="{Binding .}"/>
                                        </Border.GestureRecognizers>
                                        <Label Text="×" 
                                               FontSize="14"
                                               TextColor="{StaticResource SecondaryTextColor}"
                                               VerticalOptions="Center"
                                               HorizontalOptions="Center"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </VerticalStackLayout>
            </VerticalStackLayout>
            
            <!-- ACTION BUTTONS -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="12" Margin="0,20,0,0">
                <!-- Cancel -->
                <Border Grid.Column="0"
                        StrokeShape="RoundRectangle 12"
                        BackgroundColor="Transparent"
                        Stroke="{StaticResource BorderColor}"
                        StrokeThickness="1"
                        HeightRequest="48">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding CancelCommand}"/>
                    </Border.GestureRecognizers>
                    <Label Text="Cancel"
                           TextColor="{StaticResource SecondaryTextColor}"
                           FontFamily="Inter"
                           FontAttributes="Bold"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"/>
                </Border>
                
                <!-- Save -->
                <Border Grid.Column="1"
                        StrokeShape="RoundRectangle 12"
                        BackgroundColor="{StaticResource PrimaryTextColor}"
                        Stroke="Transparent"
                        HeightRequest="48">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding SaveCommand}"/>
                    </Border.GestureRecognizers>
                    <Label Text="Save"
                           TextColor="{StaticResource PageBackgroundColor}"
                           FontFamily="Inter"
                           FontAttributes="Bold"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"/>
                </Border>
            </Grid>
            
            <!-- Delete Button -->
            <Border StrokeShape="RoundRectangle 12"
                    BackgroundColor="Transparent"
                    Stroke="{StaticResource SecondaryTextColor}"
                    StrokeThickness="1"
                    HeightRequest="48"
                    IsVisible="{Binding IsNewTask, Converter={StaticResource InverseBoolConverter}}">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding DeleteCommand}"/>
                </Border.GestureRecognizers>
                <Label Text="Delete Task"
                       TextColor="{StaticResource SecondaryTextColor}"
                       FontFamily="Inter"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"/>
            </Border>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
