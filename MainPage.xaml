<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Todo_asa.ViewModels"
             xmlns:models="clr-namespace:Todo_asa.Models"
             x:Class="Todo_asa.MainPage"
             x:DataType="viewmodels:TaskListViewModel"
             Title="{Binding Title}"
             BackgroundColor="{StaticResource PageBackgroundColor}"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,*,Auto">
        
        <!-- ═══════════════════════════════════════════════════════ -->
        <!-- TOP HEADER WITH PROFILE & SETTINGS                       -->
        <!-- ═══════════════════════════════════════════════════════ -->
        <Border Grid.Row="0"
                BackgroundColor="{StaticResource GlassColor}"
                StrokeShape="RoundRectangle 0,0,24,24"
                Stroke="Transparent"
                Padding="20,16">
            <Grid ColumnDefinitions="Auto,*,Auto,Auto">
                
                <!-- Profile Avatar -->
                <Border Grid.Column="0"
                        WidthRequest="44" HeightRequest="44"
                        StrokeShape="RoundRectangle 22"
                        Background="{StaticResource AccentGradient}"
                        Stroke="Transparent">
                    <Label Text="👤" 
                           FontSize="20"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"/>
                </Border>
                
                <!-- Title & Greeting -->
                <VerticalStackLayout Grid.Column="1" Spacing="2" Margin="14,0,0,0" VerticalOptions="Center">
                    <Label Text="TaskFlow" 
                           FontSize="20" 
                           FontAttributes="Bold"
                           FontFamily="Inter"
                           TextColor="{StaticResource PrimaryTextColor}"/>
                    <Label Text="Let's be productive today!" 
                           FontSize="12"
                           FontFamily="Inter"
                           TextColor="{StaticResource SecondaryTextColor}"/>
                </VerticalStackLayout>
                
                <!-- Notification Bell -->
                <Border Grid.Column="2"
                        WidthRequest="40" HeightRequest="40"
                        StrokeShape="RoundRectangle 12"
                        BackgroundColor="{StaticResource GlassColor}"
                        Stroke="Transparent"
                        Margin="0,0,8,0">
                    <Label Text="🔔" 
                           FontSize="18"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"/>
                </Border>
                
                <!-- Settings Gear -->
                <Border Grid.Column="3"
                        WidthRequest="40" HeightRequest="40"
                        StrokeShape="RoundRectangle 12"
                        BackgroundColor="{StaticResource GlassColor}"
                        Stroke="Transparent">
                    <Label Text="⚙️" 
                           FontSize="18"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"/>
                </Border>
            </Grid>
        </Border>

        <!-- ═══════════════════════════════════════════════════════ -->
        <!-- MAIN CONTENT - TASK LIST                                 -->
        <!-- ═══════════════════════════════════════════════════════ -->
        <RefreshView Grid.Row="1"
                     Command="{Binding LoadTasksCommand}"
                     IsRefreshing="{Binding IsBusy}"
                     RefreshColor="{StaticResource AccentColor}"
                     Margin="16,12,16,0">
            <CollectionView ItemsSource="{Binding Tasks}"
                            SelectionMode="None">
                
                <!-- Empty State -->
                <CollectionView.EmptyView>
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="16" Padding="40">
                        <Border WidthRequest="80" HeightRequest="80"
                                StrokeShape="RoundRectangle 40"
                                Background="{StaticResource AccentGradient}"
                                HorizontalOptions="Center">
                            <Label Text="✨" FontSize="36" VerticalOptions="Center" HorizontalOptions="Center"/>
                        </Border>
                        <Label Text="No tasks yet" 
                               FontSize="20" 
                               FontAttributes="Bold"
                               FontFamily="Inter"
                               TextColor="{StaticResource PrimaryTextColor}"
                               HorizontalOptions="Center"/>
                        <Label Text="Tap the + button to create your first task" 
                               FontSize="14"
                               FontFamily="Inter"
                               TextColor="{StaticResource SecondaryTextColor}"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
                
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="12"/>
                </CollectionView.ItemsLayout>
                
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:TaskItem">
                        <!-- Task Card -->
                        <Border BackgroundColor="{StaticResource CardBackgroundColorTranslucent}"
                                StrokeShape="RoundRectangle 20"
                                Stroke="{StaticResource BorderColor}"
                                StrokeThickness="1"
                                Padding="16"
                                Shadow="{StaticResource CardGlowShadow}">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:TaskListViewModel}}, Path=ViewTaskCommand}"
                                                      CommandParameter="{Binding .}"/>
                            </Border.GestureRecognizers>
                            
                            <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="14" RowSpacing="8">
                                
                                <!-- Status Badge -->
                                <Border Grid.Column="0" Grid.RowSpan="2"
                                        WidthRequest="48" HeightRequest="48"
                                        StrokeShape="RoundRectangle 14"
                                        Stroke="Transparent"
                                        VerticalOptions="Start">
                                    <Border.Triggers>
                                        <DataTrigger TargetType="Border" Binding="{Binding Status}" Value="ToDo">
                                            <Setter Property="Background" Value="{StaticResource ToDoGradient}"/>
                                        </DataTrigger>
                                        <DataTrigger TargetType="Border" Binding="{Binding Status}" Value="InProgress">
                                            <Setter Property="Background" Value="{StaticResource InProgressGradient}"/>
                                        </DataTrigger>
                                        <DataTrigger TargetType="Border" Binding="{Binding Status}" Value="Completed">
                                            <Setter Property="Background" Value="{StaticResource CompletedGradient}"/>
                                        </DataTrigger>
                                    </Border.Triggers>
                                    <Label VerticalOptions="Center" HorizontalOptions="Center" FontSize="22">
                                        <Label.Triggers>
                                            <DataTrigger TargetType="Label" Binding="{Binding Status}" Value="ToDo">
                                                <Setter Property="Text" Value="📝"/>
                                            </DataTrigger>
                                            <DataTrigger TargetType="Label" Binding="{Binding Status}" Value="InProgress">
                                                <Setter Property="Text" Value="⚡"/>
                                            </DataTrigger>
                                            <DataTrigger TargetType="Label" Binding="{Binding Status}" Value="Completed">
                                                <Setter Property="Text" Value="✓"/>
                                                <Setter Property="TextColor" Value="White"/>
                                                <Setter Property="FontAttributes" Value="Bold"/>
                                            </DataTrigger>
                                        </Label.Triggers>
                                    </Label>
                                </Border>
                                
                                <!-- Title -->
                                <Label Grid.Column="1" Grid.Row="0"
                                       Text="{Binding Title}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       FontFamily="Inter"
                                       TextColor="{StaticResource PrimaryTextColor}"
                                       LineBreakMode="TailTruncation"
                                       MaxLines="1"/>
                                
                                <!-- Delete Button -->
                                <Border Grid.Column="2" Grid.Row="0"
                                        WidthRequest="32" HeightRequest="32"
                                        StrokeShape="RoundRectangle 8"
                                        BackgroundColor="{StaticResource GlassColor}"
                                        Stroke="Transparent">
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:TaskListViewModel}}, Path=DeleteTaskCommand}"
                                                              CommandParameter="{Binding .}"/>
                                    </Border.GestureRecognizers>
                                    <Label Text="✕" FontSize="12" TextColor="{StaticResource SecondaryTextColor}"
                                           VerticalOptions="Center" HorizontalOptions="Center"/>
                                </Border>
                                
                                <!-- Status & Subtasks -->
                                <HorizontalStackLayout Grid.Column="1" Grid.Row="1" Spacing="8">
                                    <Border BackgroundColor="{StaticResource GlassColor}"
                                            StrokeShape="RoundRectangle 8"
                                            Padding="8,4">
                                        <Label Text="{Binding StatusDisplay}"
                                               FontSize="11"
                                               FontFamily="Inter"
                                               TextColor="{StaticResource PrimaryLight}"/>
                                    </Border>
                                    <Border BackgroundColor="{StaticResource GlassColor}"
                                            StrokeShape="RoundRectangle 8"
                                            Padding="8,4"
                                            IsVisible="{Binding SubTasks.Count, Converter={StaticResource IntToBoolConverter}}">
                                        <Label Text="{Binding SubTaskProgress, StringFormat='📋 {0}'}"
                                               FontSize="11"
                                               FontFamily="Inter"
                                               TextColor="{StaticResource SecondaryTextColor}"/>
                                    </Border>
                                </HorizontalStackLayout>
                                
                                <!-- Due Date -->
                                <HorizontalStackLayout Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="2" Spacing="6"
                                                       IsVisible="{Binding DueDate, Converter={StaticResource NullableToBoolConverter}}">
                                    <Border StrokeShape="RoundRectangle 8" Padding="8,4">
                                        <Border.Triggers>
                                            <DataTrigger TargetType="Border" Binding="{Binding IsOverdue}" Value="True">
                                                <Setter Property="BackgroundColor" Value="#40EF4444"/>
                                            </DataTrigger>
                                            <DataTrigger TargetType="Border" Binding="{Binding IsOverdue}" Value="False">
                                                <Setter Property="BackgroundColor" Value="{StaticResource GlassColor}"/>
                                            </DataTrigger>
                                        </Border.Triggers>
                                        <HorizontalStackLayout Spacing="4">
                                            <Label Text="📅" FontSize="11"/>
                                            <Label Text="{Binding DueDateDisplay}" FontSize="11" FontFamily="Inter">
                                                <Label.Triggers>
                                                    <DataTrigger TargetType="Label" Binding="{Binding IsOverdue}" Value="True">
                                                        <Setter Property="TextColor" Value="{StaticResource OverdueColor}"/>
                                                        <Setter Property="FontAttributes" Value="Bold"/>
                                                    </DataTrigger>
                                                    <DataTrigger TargetType="Label" Binding="{Binding IsOverdue}" Value="False">
                                                        <Setter Property="TextColor" Value="{StaticResource SecondaryTextColor}"/>
                                                    </DataTrigger>
                                                </Label.Triggers>
                                            </Label>
                                        </HorizontalStackLayout>
                                    </Border>
                                </HorizontalStackLayout>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
        
        <!-- ═══════════════════════════════════════════════════════ -->
        <!-- FLOATING ACTION BUTTON (Premium Design)                  -->
        <!-- ═══════════════════════════════════════════════════════ -->
        <Border Grid.Row="1"
                WidthRequest="64"
                HeightRequest="64"
                StrokeShape="RoundRectangle 32"
                Stroke="#40FFFFFF"
                StrokeThickness="2"
                Background="{StaticResource AccentGradient}"
                HorizontalOptions="End"
                VerticalOptions="End"
                Margin="0,0,20,20"
                Shadow="{StaticResource AccentGlow}">
            <Border.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding AddTaskCommand}"/>
            </Border.GestureRecognizers>
            <Grid>
                <!-- Inner glow effect -->
                <Border WidthRequest="56" HeightRequest="56"
                        StrokeShape="RoundRectangle 28"
                        BackgroundColor="#20FFFFFF"
                        Stroke="Transparent"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"/>
                <Label Text="+"
                       FontSize="32"
                       FontAttributes="Bold"
                       TextColor="White"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"/>
            </Grid>
        </Border>

        <!-- ═══════════════════════════════════════════════════════ -->
        <!-- BOTTOM TAB BAR FOR FILTERING                             -->
        <!-- ═══════════════════════════════════════════════════════ -->
        <Border Grid.Row="2"
                BackgroundColor="{StaticResource CardBackgroundColor}"
                StrokeShape="RoundRectangle 24,24,0,0"
                Stroke="{StaticResource BorderColor}"
                StrokeThickness="1"
                Padding="8,12,8,16">
            <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="4">
                
                <!-- All Tasks Tab -->
                <Border Grid.Column="0"
                        StrokeShape="RoundRectangle 16"
                        Stroke="Transparent"
                        Padding="8,10">
                    <Border.Triggers>
                        <DataTrigger TargetType="Border" Binding="{Binding SelectedFilterIndex}" Value="0">
                            <Setter Property="Background" Value="{StaticResource AccentGradient}"/>
                        </DataTrigger>
                    </Border.Triggers>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding LoadTasksCommand}" CommandParameter="0"/>
                    </Border.GestureRecognizers>
                    <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
                        <Label Text="📊" FontSize="18" HorizontalOptions="Center"/>
                        <Label Text="All" FontSize="11" FontFamily="Inter" HorizontalOptions="Center">
                            <Label.Triggers>
                                <DataTrigger TargetType="Label" Binding="{Binding SelectedFilterIndex}" Value="0">
                                    <Setter Property="TextColor" Value="White"/>
                                    <Setter Property="FontAttributes" Value="Bold"/>
                                </DataTrigger>
                            </Label.Triggers>
                        </Label>
                    </VerticalStackLayout>
                </Border>
                
                <!-- To Do Tab -->
                <Border Grid.Column="1"
                        StrokeShape="RoundRectangle 16"
                        Stroke="Transparent"
                        Padding="8,10">
                    <Border.Triggers>
                        <DataTrigger TargetType="Border" Binding="{Binding SelectedFilterIndex}" Value="1">
                            <Setter Property="Background" Value="{StaticResource ToDoGradient}"/>
                        </DataTrigger>
                    </Border.Triggers>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding LoadTasksCommand}" CommandParameter="1"/>
                    </Border.GestureRecognizers>
                    <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
                        <Label Text="📝" FontSize="18" HorizontalOptions="Center"/>
                        <Label Text="To Do" FontSize="11" FontFamily="Inter" HorizontalOptions="Center">
                            <Label.Triggers>
                                <DataTrigger TargetType="Label" Binding="{Binding SelectedFilterIndex}" Value="1">
                                    <Setter Property="TextColor" Value="White"/>
                                    <Setter Property="FontAttributes" Value="Bold"/>
                                </DataTrigger>
                            </Label.Triggers>
                        </Label>
                    </VerticalStackLayout>
                </Border>
                
                <!-- In Progress Tab -->
                <Border Grid.Column="2"
                        StrokeShape="RoundRectangle 16"
                        Stroke="Transparent"
                        Padding="8,10">
                    <Border.Triggers>
                        <DataTrigger TargetType="Border" Binding="{Binding SelectedFilterIndex}" Value="2">
                            <Setter Property="Background" Value="{StaticResource InProgressGradient}"/>
                        </DataTrigger>
                    </Border.Triggers>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding LoadTasksCommand}" CommandParameter="2"/>
                    </Border.GestureRecognizers>
                    <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
                        <Label Text="⚡" FontSize="18" HorizontalOptions="Center"/>
                        <Label Text="Active" FontSize="11" FontFamily="Inter" HorizontalOptions="Center">
                            <Label.Triggers>
                                <DataTrigger TargetType="Label" Binding="{Binding SelectedFilterIndex}" Value="2">
                                    <Setter Property="TextColor" Value="White"/>
                                    <Setter Property="FontAttributes" Value="Bold"/>
                                </DataTrigger>
                            </Label.Triggers>
                        </Label>
                    </VerticalStackLayout>
                </Border>
                
                <!-- Completed Tab -->
                <Border Grid.Column="3"
                        StrokeShape="RoundRectangle 16"
                        Stroke="Transparent"
                        Padding="8,10">
                    <Border.Triggers>
                        <DataTrigger TargetType="Border" Binding="{Binding SelectedFilterIndex}" Value="3">
                            <Setter Property="Background" Value="{StaticResource CompletedGradient}"/>
                        </DataTrigger>
                    </Border.Triggers>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding LoadTasksCommand}" CommandParameter="3"/>
                    </Border.GestureRecognizers>
                    <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
                        <Label Text="✅" FontSize="18" HorizontalOptions="Center"/>
                        <Label Text="Done" FontSize="11" FontFamily="Inter" HorizontalOptions="Center">
                            <Label.Triggers>
                                <DataTrigger TargetType="Label" Binding="{Binding SelectedFilterIndex}" Value="3">
                                    <Setter Property="TextColor" Value="White"/>
                                    <Setter Property="FontAttributes" Value="Bold"/>
                                </DataTrigger>
                            </Label.Triggers>
                        </Label>
                    </VerticalStackLayout>
                </Border>
            </Grid>
        </Border>
        
    </Grid>
</ContentPage>
